<h2>Editing Expense <%= @expense[:description] %></h2>
<form action="/budget/expenses/<%= @expense[:id] %>" method="post"
  <dl>
    <dd>
      <label for="description">Description:</label>
      <input name="description" type="text" value="<%= @expense[:description] %>">
    </dd>
    <dd>
      <label for="amount">Amount:</label>
      <input name="amount" type="text" value="<%= @expense[:amount] %>">
    </dd>
    <dd>
      <label for="category">Category:</label>
      <input name="category" type="text" value="<%= @expense[:category] %>">
    </dd>
    <dd>
      <label for="date">Date:</label>
      <input type="date" name="date">
  </dl>

  <input type="submit" value="Save">
  <a href="/budget">Cancel</a>
</form>