<h2>Editing Transaction <%= @transaction[:description] %></h2>
<form action="/budget/transactions/<%= @transaction[:id] %>" method="post"
  <dl>
    <dd>
      <label for="description">Description:</label>
      <input name="description" type="text" value="<%= @transaction[:description] %>">
    </dd>
    <dd>
      <label for="amount">Amount:</label>
      <input name="amount" type="text" value="<%= @transaction[:amount] %>">
    </dd>
    <dd>
      <label for="category">Category:</label>
      <input name="category" type="text" value="<%= @transaction[:category] %>">
    </dd>
    <dd>
      <label for="date">Date:</label>
      <input type="date" name="date" value="<%= @transaction[:date] %>">
    </dd>
  </dl>

  <input type="submit" value="Save">
  <a href="/budget">Cancel</a>
</form>